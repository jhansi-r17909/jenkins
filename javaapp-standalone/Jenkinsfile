pipeline {
    agent any

    environment {
        REPO_URL = 'https://github.com/jhansi-r17909/jenkins.git'
        DEPLOY_PATH = '/opt/deployments/myapp'   // change this to your target folder
    }

    stages {
        stage('Checkout') {
            steps {
                git url: "${env.REPO_URL}", branch: 'main'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Deploy Artifact') {
            steps {
                echo "Deploying artifact to ${env.DEPLOY_PATH}"

                // Create deploy directory if missing
                sh '''
                    mkdir -p ${DEPLOY_PATH}
                '''

                // Copy the JAR/WAR from target folder to deploy folder
                sh '''
                    ARTIFACT=$(ls target/*.jar target/*.war 2>/dev/null | head -n 1)
                    if [ -z "$ARTIFACT" ]; then
                        echo "No WAR or JAR found in target/"
                        exit 1
                    fi

                    cp "$ARTIFACT" ${DEPLOY_PATH}/
                    echo "Artifact copied to ${DEPLOY_PATH}"
                '''
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
